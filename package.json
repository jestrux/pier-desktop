{
	"name": "pier",
	"description": "",
	"version": "0.0.0",
	"private": true,
	"main": "desktop/main.js",
	"scripts": {
		"clean": "del-cli dist desktop/build public/build",
		"dev": "npm run clean && cross-env NODE_ENV=development npm-run-all --parallel --print-label --race dev:*",
		"dev:remix": "remix watch",
		"dev:nodemon": "wait-on file:desktop/main.js && nodemon .",
		"build": "npm run clean && remix build && electron-builder",
		"start": "cross-env NODE_ENV=production electron ."
	},
	"build": {
		"productName": "Pier",
		"files": [
			"desktop",
			"public",
			"remix.config.js"
		],
		"extraResources": [
			"prisma/**/*",
			"node_modules/.prisma/**/*",
			"node_modules/@prisma/client/**/*"
		]
	},
	"dependencies": {
		"@chakra-ui/icons": "^2.1.0",
		"@chakra-ui/react": "^2.8.0",
		"@dnd-kit/core": "^6.0.8",
		"@dnd-kit/modifiers": "^6.0.1",
		"@emotion/react": "^11.11.1",
		"@emotion/styled": "^11.11.0",
		"@headlessui/react": "^1.7.17",
		"@heroicons/react": "^2.0.18",
		"@popperjs/core": "^2.11.8",
		"@prisma/client": "^5.2.0",
		"@reach/alert-dialog": "^0.18.0",
		"@reach/combobox": "^0.18.0",
		"@remix-run/node": "^1.16.1",
		"@remix-run/react": "^1.16.1",
		"@remix-run/server-runtime": "^1.16.1",
		"@remix-run/web-stream": ">=1.0.3",
		"eslint": "^8.48.0",
		"eslint-plugin-react": "^7.33.2",
		"fast-glob": "^3.2.12",
		"framer-motion": "^10.16.2",
		"isbot": "latest",
		"promised-sqlite3": "^2.1.0",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"remarkable": "^2.0.1",
		"remix-electron": "latest",
		"remix-utils": "^6.6.0",
		"sqlite3": "^5.1.6",
		"tinycolor2": "^1.6.0"
	},
	"devDependencies": {
		"@remix-run/dev": "^1.19.3",
		"@types/react": "^18.2.7",
		"@types/react-dom": "^18.2.4",
		"cross-env": "^7.0.3",
		"del-cli": "^5.0.0",
		"electron": "^25.0.0",
		"electron-builder": "^23.6.0",
		"electron-devtools-installer": "^3.2.0",
		"nodemon": "^2.0.22",
		"npm-run-all": "^4.1.5",
		"prisma": "^5.2.0",
		"tailwindcss": "^3.3.3",
		"tailwindcss-themer": "^3.1.0",
		"typescript": "^5.0.4",
		"wait-on": "^7.0.1"
	},
	"sideEffects": false
}
